<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ForageableDetailFragment">

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Date"/>

    <ImageView
        android:id="@+id/ic_morning"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/mor"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/morning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toTopOf="@id/ic_morning"
        app:layout_constraintBottom_toBottomOf="@id/ic_morning"
        app:layout_constraintStart_toEndOf="@id/ic_morning"
        tools:text="Morning"/>

    <TextView
        android:id="@+id/morning_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="@id/ic_morning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_morning"
        tools:text="Morning Kcal" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ic_morning"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_lunch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/lun"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toTopOf="@+id/ic_lunch"
        app:layout_constraintBottom_toBottomOf="@id/ic_lunch"
        app:layout_constraintStart_toEndOf="@id/ic_lunch"
        tools:text="Lunch" />

    <TextView
        android:id="@+id/lunch_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="@id/ic_lunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_lunch"
        tools:text="Lunch Kcal" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ic_lunch"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_dinner"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/din"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="6"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:singleLine="false"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/ic_dinner"
        app:layout_constraintTop_toTopOf="@+id/ic_dinner"
        app:layout_constraintBottom_toBottomOf="@id/ic_dinner"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Dinner" />

    <TextView
        android:id="@+id/dinner_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="@id/ic_dinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_dinner"
        tools:text="Dinner Kcal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_forageable_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ic_dinner"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_evaluation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/eva"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/evaluation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="6"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:singleLine="false"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/ic_evaluation"
        app:layout_constraintTop_toTopOf="@+id/ic_evaluation"
        app:layout_constraintBottom_toBottomOf="@id/ic_evaluation"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Evaluation" />

    <TextView
        android:id="@+id/kcal_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="@id/ic_evaluation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_evaluation"
        tools:text="Kcal Total" />

</androidx.constraintlayout.widget.ConstraintLayout>